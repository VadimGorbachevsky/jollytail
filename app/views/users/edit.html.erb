<h1>Редактирование личных данных</h1>

<%= form_for @user do |f| %>

    <%= f.label :name %><br>
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %><br>

    <%= f.label :email %><br>
    <%= f.email_field :email, autocomplete: "email" %><br>

    <%= f.label :city %><br>
    <%= f.text_field :city, autocomplete: "city" %><br>

    <%= f.label :telephone %><br>
    <%= f.phone_field :telephone, autocomplete: "telephone" %><br>

    <%= f.submit "Подтвердить" %>
<% end %>
